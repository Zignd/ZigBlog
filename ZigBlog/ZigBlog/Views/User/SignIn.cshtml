@using ZigBlog.Translations

@model ZigBlog.Models.ViewModels.UserSignInViewModel

@{
    ViewBag.Title = Translation.UserSignIn;
}

<h2>@Translation.UserSignIn <small>@Translation.SignInDescription</small></h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(vm => vm.Username)
        @Html.TextBoxFor(vm => vm.Username, new { @class = "form-control" })
        @Html.ValidationMessageFor(vm => vm.Username)
    </div>

    <div class="form-group">
        @Html.LabelFor(vm => vm.Password)
        @Html.PasswordFor(vm => vm.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(vm => vm.Password)
    </div>

    <div class="form-group">
        @Html.CheckBoxFor(vm => vm.RememberMe)
        @Html.LabelFor(vm => vm.RememberMe)
    </div>

    <div>
        <button class="btn btn-primary" type="submit">@Translation.UserSignIn</button>
        <a class="btn btn-default" href="@Url.RouteUrl("Default")">@Translation.ReturnHome</a>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}