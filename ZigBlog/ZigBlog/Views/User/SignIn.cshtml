@using ZigBlog.Translations

@model ZigBlog.Models.ViewModels.UserSignInViewModel

@{
    ViewBag.Title = Translation.UserSignIn;
}

<h2>@Translation.UserSignIn <small>@Translation.SignInDescription</small></h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    @Html.AntiForgeryToken()

    @Html.HiddenFor(x => x.ReturnUrl)

    <div class="form-group">
        @Html.LabelFor(x => x.Username)
        @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Username)
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Password)
        @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Password)
    </div>

    <div class="form-group">
        @Html.CheckBoxFor(x => x.RememberMe)
        @Html.LabelFor(x => x.RememberMe)
    </div>

    <div>
        <button class="btn btn-primary" type="submit">@Translation.UserSignIn</button>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}