@model UserManageViewModel

@{
    ViewBag.Title = @Translation.ManageUsers;
}

<h2>@Translation.ManageUsers</h2>

<table class="table table-hover">
    <thead>
        <tr>
            <th>@Translation.Username</th>
            <th class="col-xs-1">Administrator</th>
            <th class="col-xs-1">Blogger</th>
            <th class="col-xs-1">Commenter</th>
            <th class="col-xs-1"></th>
            <th class="col-xs-1"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            Html.RenderPartial("_Update", new UserUpdateViewModel(user));
        }
    </tbody>
</table>

<a class="btn btn-primary" href="@Url.Action("SignUp")">@Translation.CreateNewUser</a>

@section Scripts {
    @Scripts.Render("~/bundles/zgmanage")
}